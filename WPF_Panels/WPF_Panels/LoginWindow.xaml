<Window x:Class="WPF_Panels.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Panels"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="username" HorizontalAlignment="Left" Margin="10,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Username&#xD;&#xA;" HorizontalAlignment="Left" Margin="5,25,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Completeaza casutele cu datele personale" VerticalAlignment="Top"/>
        <Label Content="Parola&#xD;&#xA;" HorizontalAlignment="Left" Margin="5,64,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="parola" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Name="ok" Content="OK" HorizontalAlignment="Left" Margin="90,119,0,0" VerticalAlignment="Top" Click="OK_Click" Width="40"/>
        <Label Name="mesaj" Content="" HorizontalAlignment="Left" Margin="16,146,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
