<Window x:Class="WPF_Panels.Windows.Panels.StackPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Panels.Windows.Panels"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="StackPanelWindow" Height="160" Width="343"
        WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Horizontal">
        <Button Name="backButton" VerticalAlignment="Top" Click="backButton_Click">Back to panels</Button>
        <Button VerticalAlignment="Center">Button 2</Button>
        <Button VerticalAlignment="Bottom">Button 3</Button>
        <Button VerticalAlignment="Bottom">Button 4</Button>
        <Button VerticalAlignment="Center">Button 5</Button>
        <Button VerticalAlignment="Top" HorizontalAlignment="Right">Button 6</Button>
    </StackPanel>
</Window>
